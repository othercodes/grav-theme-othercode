{% extends '@nucleus/partials/particle.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ url('gantry-theme://css/animate.css') }}" type="text/css"/>
{% endblock %}

{% block javascript_footer %}
    {% if particle.enabled %}
        {{ parent() }}
        <script src="{{ url('gantry-theme://js/wow.js') }}" type="text/javascript"></script>
        <script type="text/javascript">
            window.onload = function () {
                new WOW({
                    boxClass: '{{ particle.boxClass }}',
                    animateClass: '{{ particle.animateClass }}',
                    offset: {{ particle.offset }},
                    mobile: {{ particle.mobile }},
                    live: {{ particle.live }},
                    scrollContainer: {{ particle.scrollContainer }}
                }).init();
            };
        </script>
    {% endif %}
{% endblock %}